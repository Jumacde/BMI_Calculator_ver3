<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/JetStream"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_page3_background"
            android:scaleType="centerCrop"
            android:contentDescription="Main Content Background"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bAboutThisApp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="50dp"
                    android:backgroundTint="@color/DarkSkyBlue"
                    android:text="about this app"
                    android:textColor="@color/Alabaster"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/bAboutBMI"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="what is BMI?"
                    android:textSize="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/Alabaster"
                    android:backgroundTint="@color/DarkSkyBlue"/>
                <Button
                    android:id="@+id/bAboutNutritionalStatus"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="what is MBI-\nClassification?"
                    android:textSize="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/Alabaster"
                    android:backgroundTint="@color/DarkSkyBlue"/>

            </LinearLayout>
        </ScrollView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>