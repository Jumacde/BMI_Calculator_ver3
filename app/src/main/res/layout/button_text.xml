<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_page3_background"
                android:scaleType="centerCrop"
                android:contentDescription="Main Content Background"
                />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- text about this app-->
                <LinearLayout
                    android:id="@+id/textId_thisApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\n this app is created for training java and android studio.
                                \n
                                \n you can calculate the BMI and you know the goal Weight.
                                \n"
                        android:textSize="30dp"
                        android:padding="20dp"
                        android:textColor="@color/YankeesBlue"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/ic_whitepaper"

                        />
                </LinearLayout>

                <!-- text about this bmi-->
                <LinearLayout
                    android:id="@+id/textId_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:textColor="@color/DarkCyan"
                        android:text="Body mass index (BMI)"
                        android:padding="5dp"
                        android:background="@color/white"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="27dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/YankeesBlue"
                        android:padding="20dp"
                        android:text=" \n BMI, formerly called the Quetelet index, is a measure for indicating nutritional status in adults.
                                \n It is defined as a person’s weight in kilograms divided by the square of the person’s height in metres (kg/m2).
                                \n
                                \n For example, an adult who weighs 70 kg and whose height is 1.75 m will have a BMI of 22.9.
                                \n"
                        android:background="@mipmap/ic_whitepaper"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_margin="30dp"
                        android:textColor="@color/YankeesBlue"
                        android:padding="10dp"
                        android:text="source:
                                \n https://www.who.int/europe/news-room/fact-sheets/item/a-healthy-lifestyle---who-recommendations
                                \n"
                        android:background="@color/white"
                        android:autoLink="web"
                        />
                </LinearLayout>

                <!-- about MBI-Classification -->
                <LinearLayout
                    android:id="@+id/textId_classification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:textColor="@color/DarkCyan"
                        android:background="@color/white"
                        android:text="MBI-Classification"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="27dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="20dp"
                        android:text="
                            \n If you have a BMI of 40 or higher, it makes sense to seek medical assistance.
                            \n If someone has a BMI of 40 kg/m² or higher, they fall under the obesity permagna (class 3 obesity) category.
                            \n
                            \n BMI > 20 | Underweight
                            \n BMI 20 - 24.9 | Desirable
                            \n BMI 25 - 29.9 | Overweight
                            \n BMI 30 - 34.9 | Obese I
                            \n BMI 35 – 39.9 | Obese II
                            \n BMI Above 40 | Obese III
                            \n"

                        android:background="@mipmap/ic_whitepaper"
                        android:textColor="@color/YankeesBlue"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_margin="30dp"
                        android:padding="10dp"
                        android:text="source:
                            \n https://www.who.int/europe/news-room/fact-sheets/item/a-healthy-lifestyle---who-recommendations
                            \n
                            \n https://www.umm.de/en/surgery/obesity-surgery/bmi-obesity-class-1-or-3/class-3-obesity
                            \n"
                        android:background="@color/white"
                        android:textColor="@color/YankeesBlue"
                        android:autoLink="web"
                        />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>